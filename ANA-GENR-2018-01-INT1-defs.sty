% Listings
\definecolor{Comments}{rgb}{0,0.63,1}
\definecolor{Keywords}{rgb}{0,0,1}
\definecolor{Numbers}{rgb}{0.5,0,0}
\definecolor{Strings}{rgb}{0,0.63,0}
\lstset{
  backgroundcolor=\color{white},
  basicstyle=\ttfamily\scriptsize,
  commentstyle=\color{Comments}\slshape,
  keywordstyle=\color{Keywords}\bfseries,
  stringstyle=\color{Strings},
  breakatwhitespace=false,         % sets if automatic breaks should only happen at whitespace
  breaklines=true,                 % sets automatic line breaking
  keepspaces=true,                 % keeps spaces in text, useful for keeping indentation of code (possibly needs columns=flexible)
}
% Macros for comments
\newcommand{\IBnote}[3][]{\tZqnote[author=Ian, #1]{#2}{#3}{magenta!20}{magenta}}
\newcommand{\FMnote}[3][]{\tZqnote[author=Fairouz, #1]{#2}{#3}{green!20}{green!50!black!60}}
\newcommand{\GSnote}[3][]{\tZqnote[author=Giordon, #1]{#2}{#3}{blue!20}{blue}}

\ifPrintNotes
  \typeout{ATLAS publications document: showing comments}
  \KOMAoptions{BCOR=-5mm}
  \KOMAoptions{DIV=last}
  \addtolength{\marginparwidth}{10mm}
  \addtolength{\textwidth}{-7.86mm}
  \RequirePackage{todonotes}
  % \presetkeys{todonotes}{color=cyan!20, linecolor=cyan}{}
  \newcommand{\tZqnote}[5][]{%
    \ifthenelse{ \equal{#1}{} }
      {\textcolor{#5}{#2}\todo[color=#4, linecolor=#5]{#3}\xspace}
      {\textcolor{#5}{#2}\todo[color=#4, linecolor=#5, inline, #1]{#3}\xspace}
    }
\else
  \typeout{ATLAS publications document: not showing comments}
  \RequirePackage[disable]{todonotes}
  % \typeout{todo 1:#1; 2:#2; 3:#3;}
  \newcommand{\tZqnote}[5][]{%
    #2\xspace
  }
\fi

